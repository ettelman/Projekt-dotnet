<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetroCD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt_dotnet.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
    <header>
            <a class="navbar-brand mobile-only" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="~/retrocd.png" /></a>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <a class="navbar-brand desktop-only" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="~/retrocd.png" /></a>
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Cds" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Home" asp-action="Information">Information</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-nav" asp-area="" asp-controller="Cds" asp-action="List">Cds</a>
                        </li>
                    
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        <a asp-area="" asp-controller="Home" asp-action="Info">Information</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
